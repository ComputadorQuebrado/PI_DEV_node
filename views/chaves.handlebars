  <style>
    .card:hover {
      transform: scale(1.03);
      transition: transform 0.3s ease;
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
      cursor: pointer;
    }
  </style>

  <main class="container">
    <h3 class="text-center my-4">Lista de Chaves</h3>
    <div>
      <a href="/cadChave">CADASTRAR CHAVE</a>
      {{#if tb_chaves.length}}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          {{#each tb_chaves}}
            <div class="col">
              <a href="/chave/{{this.id_chave}}/detalhes">
                <div class="card h-70 bg-light border-primary">
                  <div class="card-body">
                    <h6 class="card-title text-primary"> {{this.titulo}}</h6>
                  </div>
                </div>
              </a>
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class="alert alert-warning text-center" role="alert">
          Sem chaves disponíveis no momento.
        </div>
      {{/if}}
    </div>
    <a href="/" class="btn btn-secondary btn-sm">EMPRÉSTIMO DE CHAVE</a>
  </main>

