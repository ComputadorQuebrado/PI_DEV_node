<style>
  .card:hover {
    transform: scale(1.03);
    transition: transform 0.3s ease;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    cursor: pointer;
  }
</style>

<h1 class="text-center my-4">Chaves</h1>
<div class="container">
  <a href="/cadChave" class="btn btn-primary m-3" role="button"><i class="bi bi-plus-square-fill"></i> Adicionar Chave</a>
  
  {{#if chaves.length}}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      {{#each chaves}}
        <div class="col">
          <a href="/chave/{{this.id_chave}}/detalhes">
            <div class="card h-100 bg-light border-primary">
              <div class="card-body">
                <h5 class="card-title text-primary"> {{this.titulo}}</h5>
              </div>
            </div>
          </a>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-warning text-center" role="alert">
      Sem chaves dispon√≠veis no momento.
    </div>
  {{/if}}
</div>
