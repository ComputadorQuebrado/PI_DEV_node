  <nav class="navbar navbar-dark bg-dark py-1">
      <a class="navbar-brand" href="#">
          KeyLoan - Detalhes do Usuário
      </a>
  </nav>

  <main class="container">
  <a 
    href="/usuario/{{tb_usuario.id_usuario}}/editar" 
    class="btn btn-sm btn-warning me-2 my-3" 
    title="Editar">
    <i class="bi bi-pencil"></i>
  </a>

  <button 
    class="btn btn-danger btn-sm my-3" 
    onclick="confirmarApagar('/usuario/{{tb_usuario.id_usuario}}/remover')">
    <i class="bi bi-trash"></i>
  </button>
  <div>
    <div class="row">
      <div class="col">
        <div class="card h-100 bg-light border-primary">
          <div class="card-body">
            <h5 class="card-title text-primary">{{tb_usuario.nome}} - {{tb_usuario.prontuario}}</h5>
            <p class="card-text"><small class="text-muted">Administrador: {{tb_usuario.perfil_adm}}</small></p>
            <p class="card-text"><small class="text-muted">Status: {{tb_usuario.status_usuario}}</small></p>
            <p class="card-text"><small class="text-muted">{{tb_usuario.email}}</small></p>
            <p class="card-text"><small class="text-muted">Cargo: {{tb_usuario.descricao_cargo}}</small></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <a href="/usuarios" class="btn btn-secondary btn-sm my-3"><i class="bi bi-arrow-left"></i>LISTA DE USUÁRIOS</a>
  </main>

  <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="toastConfirmarDelete" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header bg-warning text-dark">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong class="me-auto">Confirmação</strong>
        <button type="button" class="btn text-dark p-0" data-bs-dismiss="toast" aria-label="Fechar" 
            style="margin-left: 10rem;">
            <i class="bi bi-x-lg"></i>
        </button>
      </div>
      <div class="toast-body">
        Tem certeza que deseja apagar este item?
        <div class="mt-2 pt-2 border-top d-flex justify-content-end gap-2">
          <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="toast">Cancelar</button>
          <form id="formDelete" method="POST">
            <button type="submit" class="btn btn-sm btn-danger">Apagar</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    function confirmarApagar(url) {
      const form = document.getElementById('formDelete');
      form.action = url;

      const toastEl = document.getElementById('toastConfirmarDelete');
      const toast = new bootstrap.Toast(toastEl);
      toast.show();
    }
  </script>

