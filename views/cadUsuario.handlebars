    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
        KeyLoan - Cadastro de Usuário
        </a>
    </nav>
    <main class="container">
        <form action={{formAction}} method="POST" class="mb-3 mx-auto">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="prontuario">Prontuário</label>
                    <input class="form-control" type="text" name="prontuario" id="prontuario" value="{{usuario.prontuario}}">
                </div>
                <div class="form-group col-md-3">
                    <label for="status_usuario">Estado</label>
                    <select name="status_usuario" class="form-control" name="status_usuario">
                        <option {{#ifCond usuario.status_usuario '==' "ATIVO"}}selected{{/ifCond}} value="ATIVO">ATIVO</option>
                        <option {{#ifCond usuario.status_usuario '==' "INATIVO"}}selected{{/ifCond}} value="INATIVO">INATIVO</option>
                    </select>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label for="nome">Nome</label>
                    <input class="form-control" type="text" name="nome" id="nome" value="{{usuario.nome}}">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label for="email">E-Mail</label>
                    <input class="form-control" type="email" name="email" id="email" value="{{usuario.email}}">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="fk_cargo">Cargo</label>
                    <select class="form-control" name="fk_cargo" id="fk_cargo">
                        {{#if tb_cargos.length}}
                            {{#each tb_cargos}}
                                <option {{#ifCond ../usuario.fk_cargo '==' this.id_cargo}}selected{{/ifCond}} value="{{this.id_cargo}}">{{this.descricao_cargo}}</option>
                            {{/each}}
                        {{else}}
                            <option value="NA">Sem cargos disponíveis.</option>
                        {{/if}}
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="perfil_adm">Perfil</label>
                    <select class="form-control" name="perfil_adm" id="perfil_adm">
                        <option {{#ifCond usuario.perfil_adm '==' 1}}selected{{/ifCond}} value="1">Administrador</option>
                        <option {{#ifCond usuario.perfil_adm '==' 0}}selected{{/ifCond}} value="0">Usuário</option>
                    </select>
                </div>
            </div>
            <a href="/usuarios" class="btn btn-secondary btn-sm">CANCELAR</a>
            <button type="submit" class="btn btn-primary btn-sm">GRAVAR</button>
        </form>
    </main>
