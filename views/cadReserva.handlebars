<main class="container">
    <form action="/cadReserva/reservar" method="POST">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="titulo">ID da chave</label>
                <p name="fk_chave">{{chave.titulo}}</p>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="codigo" >Código</label>
                <select name="fk_usuario" id="idusuario" class="form-control">
                    {{#if tb_usuario.length}}
                        {{#each tb_usuario}}
                            <option value={{this.id_usuario}}>{{this.nome}} - {{this.prontuario}}</option>
                        {{/each}}
                    {{else}}
                        <option value="NA">Sem usuários disponíveis.</option>
                    {{/if}}
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="datahora">Data</label>
                <input type="datetime-local" id="dt_planejada" class="form-control" name="dt_planejada">
                <input type="text" id="dt_planejada2" class="form-control" name="dt_planejada2">
            </div>
            <div class="form-group col-md-4">
                <label for="somadata">Quantas horas a reserva irá durar?</label>
                <select name="somahora" id="somahora" class="form-control">
                    <option value="1">1 Hora</option>
                    <option value="2">2 Horas</option>
                    <option value="3">3 Horas</option>
                    <option value="4">4 Horas</option>
                    <option value="5">5 Horas</option>
                    <option value="6">6 Horas</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="dt_planejadafinal">Hora de retorno:</label>
                <input type="datetime-local" name="dt_planejadafinal" id="dt_planejadafinal" readonly>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="reservas">Próximas Reservas</label>
                <div class="container">
                    {{#if tb_reserva.length}}
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                        {{#each tb_reserva}}
                                <div class="col">
                                <div class="card h-100 bg-light border-primary">
                                    <div class="card-body">
                                    <h5 class="card-title text-primary">{{this.id_reserva}}</h5>
                                    <p class="card-text">{{this.chave_titulo}}</p>
                                    <h6 class="card-subtitle mb-2 text-muted">Dt Reserva {{formatDate this.dt_reserva}}</h6>
                                    <p class="card-text">Dt Planejada {{formatDateTime this.dt_planejada}}</p>
                                    </div>
                                </div>
                                </div>
                        {{/each}}
                        </div>
                    {{else}}
                        <div class="alert alert-warning text-center" role="alert">
                        Sem reservas no momento.
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-secondary btn-sm" id="btnCancelar">CANCELAR</button>
        <button type="submit" class="btn btn-primary btn-sm">GRAVAR</button>
    </form>
</main>
