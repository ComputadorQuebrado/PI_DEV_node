<script>
    document.addEventListener('DOMContentLoaded', function () {
        const select = document.getElementById('somahora');
        const inputData = document.getElementById('dt_planejada');
        const dt_planejadafinal2 = document.getElementById('dt_planejadafinal2');
    
        select.addEventListener('change', function () {
            const horasAdicionar = parseInt(select.value);
            const dataValor = inputData.value;
        
            if (!dataValor) {
                dt_planejadafinal2.value = "Selecione uma data!";
                return;
            }
        
            // Converte para objeto Date
            const data = new Date(dataValor);
        
            // Adiciona as horas
            data.setHours(data.getHours() + horasAdicionar);
        
            // Formata para yyyy-MM-ddTHH:mm
            const formatado = data.toISOString().slice(0, 16); // Ex: "2025-07-18T17:00"
        
            dt_planejadafinal2.value = formatado.replace('T', ' às ');
        });
    });
</script>