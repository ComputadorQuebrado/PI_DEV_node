        <li class="nav-item">
            <a class="nav-link disabled text-light" href="#">Cadastro Reserva</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Cadastro Chave</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Cadastro Usuário</a>
        </li>
    </ul>
</nav>
<main class="container">
    <form>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="titulo">ID da chave</label>
                <select name="fk_chave" id="idchave" class="form-control">
                    {{#if tb_chave.length}}
                        {{#each tb_chave}}
                            <option value="{{this.id_chave}}">{{this.id_chave}} - {{this.titulo}}</option>
                        {{/each}}
                    {{else}}
                        <option value="NA">Sem chaves disponíveis.</option>
                    {{/if}}
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="codigo" >Código</label>
                <select name="fk_usuario" id="idusuario" class="form-control">
                    {{#if tb_usuario.length}}
                        {{#each tb_usuario}}
                            <option value={{this.id_usuario}}>{{this.nome}} - {{this.prontuario}}</option>
                        {{/each}}
                    {{else}}
                        <option value="NA">Sem usuários disponíveis.</option>
                    {{/if}}
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="data">Data</label>
                <input type="date" id="data" class="form-control" name="data_planejada">
                <input type="text" id="hora" class="form-control" name="hr_planejada">
                <input type="text" id="datahora" class="form-control" name="dt_planejada">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="reservas">Próximas Reservas</label>
                <div class="container">
                    {{#if tb_reserva.length}}
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                        {{#each tb_reserva}}
                                <div class="col">
                                <div class="card h-100 bg-light border-primary">
                                    <div class="card-body">
                                    <h5 class="card-title text-primary">{{this.id_reserva}}</h5>
                                    <p class="card-text">{{this.chave_titulo}}</p>
                                    <h6 class="card-subtitle mb-2 text-muted">Dt Reserva {{this.dt_reserva}}</h6>
                                    <p class="card-text">Dt Retorno {{this.dt_planejada}}</p>
                                    </div>
                                </div>
                                </div>
                        {{/each}}
                        </div>
                    {{else}}
                        <div class="alert alert-warning text-center" role="alert">
                        Sem reservas no momento.
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-secondary btn-sm" id="btnCancelar">CANCELAR</button>
        <button type="button" class="btn btn-primary btn-sm">GRAVAR</button>
    </form>
</main>
