<main class="container">
    <form>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="titulo">ID da chave</label>
                <input type="text" id="titulo" class="form-control" value="{{reserva.chave_titulo}}">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="codigo" >Código</label>
                <input type="text" id="codigo" class="form-control">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="data">Data</label>
                <input type="date" id="data" class="form-control">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="reservas">Próximas Reservas</label>
                <div class="container">
                    {{#if tb_reserva.length}}
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                        {{#each tb_reserva}}
                            {{!{{#ifEquals fk_chave 1}}
                                <div class="col">
                                <div class="card h-100 bg-light border-primary">
                                    <div class="card-body">
                                    <h5 class="card-title text-primary">{{this.id_reserva}}</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">Dt Reserva {{this.dt_reserva}}</h6>
                                    <p class="card-text">Dt Retorno {{this.dt_planejada}}</p>
                                    <p class="card-text">Nome da Chave {{this.chave_titulo}}</p>
                                    </div>
                                </div>
                                </div>
                            {{!{{/ifEquals}}
                        {{/each}}
                        </div>
                    {{else}}
                        <div class="alert alert-warning text-center" role="alert">
                        Sem reservas no momento.
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-secondary btn-sm" id="btnCancelar">CANCELAR</button>
        <button type="button" class="btn btn-primary btn-sm">GRAVAR</button>
    </form>
</main>
