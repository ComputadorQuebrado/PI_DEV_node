    <main class="container">
        <form>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="idchave">ID da chave</label>
                    <select name="idchave" id="idchave" class="form-control">
                        {{#if tb_chave.length}}
                            {{#each tb_chave}}
                                <option value={{this.id_chave}}>{{this.titulo}}</option>
                            {{/each}}
                        {{else}}
                            <option value="NA">Sem chaves disponíveis.</option>
                        {{/if}}
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label for="codigo" >Código</label>
                    <input type="text" id="codigo" class="form-control">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="data">Data</label>
                    <input type="date" id="data" class="form-control">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <span>Período: </span>
                    <input type="checkbox" id="manha" name="option">Manhã
                    <input type="checkbox" id="tarde" name="option">Tarde
                    <input type="checkbox" id="noite" name="option">Noite
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label for="reservas">Próximas Reservas</label>
                    <div class="container">
                        {{#if tb_reserva.length}}
                            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                            {{#each tb_reserva}}
                                {{!{{#ifEquals fk_chave 1}}
                                    <div class="col">
                                    <div class="card h-100 bg-light border-primary">
                                        <div class="card-body">
                                        <h5 class="card-title text-primary">{{this.id_reserva}}</h5>
                                        <h6 class="card-subtitle mb-2 text-muted">Dt Reserva {{this.dt_reserva}}</h6>
                                        <p class="card-text">Dt Evento {{this.dt_planejada}}</p>
                                        <p class="card-text">ID Chave {{this.fk_chave}}</p>
                                        </div>
                                    </div>
                                    </div>
                                {{!{{/ifEquals}}
                            {{/each}}
                            </div>
                        {{else}}
                            <div class="alert alert-warning text-center" role="alert">
                            Sem reservas no momento.
                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-secondary btn-sm" id="btnCancelar">CANCELAR</button>
            <button type="button" class="btn btn-primary btn-sm">GRAVAR</button>
        </form>
        </main>
        <footer class="footer navbar-fixed-bottom">
            <div class="bg-dark text-center text-light py-3">
              <p>TI Noturno 2-23</p>
            </div>
        </footer>
