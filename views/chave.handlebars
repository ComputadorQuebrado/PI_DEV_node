  <main class="container">
    <h3 class="text-center my-4">Detalhes da Chave</h3>
    <a href="/chave/{{tb_chave.id_chave}}/editar">EDITAR</a>
    <a href="/chave/{{tb_chave.id_chave}}/remover">REMOVER</a>
    <div>
      <div class="row">
        <div class="col">
          <div class="card h-100 bg-light border-primary">
            <div class="card-body">
              <h5 class="card-title text-primary">{{tb_chave.titulo}}</h5>
              <p class="card-text"><small class="text-muted">{{tb_chave.descricao}}</small></p>
              <p class="card-text"><small class="text-muted">Status: {{tb_chave.status_chave}}</small></p>
              <p class="card-text"><small class="text-muted">Permite Reserva? {{tb_chave.permite_reserva}}</small></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <a href="/chaves" class="btn btn-secondary btn-sm">LISTA DE CHAVES</a>
  </main>

